<?xml version="1.0" encoding="UTF-8"?>
<apis>
    <api>
        <type>cryption</type>
        <key>dddadafada</key>
        <autorun>false</autorun>
    </api>
    <api>
        <type>form</type>
        <autorun>false</autorun>
        <form>
            <name>login</name>
            <protection>
                <type>csrf</type>
                <option>
                    <name>urlReferer</name>
                    <value>root</value><!-- url name, defined into urls.xml -->
                    <value>captcha</value><!-- multi url allowed -->
                </option>
                <option>
                    <name>timeValidity</name>
                    <value>60</value><!-- in second -->
                </option>
            </protection>
            <protection>
                <type>bruteforce</type>
                <!-- TODO options -->
            </protection>
            <protection>
                <type>captcha</type>
                <option>
                    <name>dataFile</name>
                    <value>[PATH_DATA]captcha[DS]captcha-full.xml</value>
                    <!--<value>[PATH_DATA]captcha[DS]captcha-image.xml</value>-->
                    <!--<value>[PATH_DATA]captcha[DS]captcha-audio.xml</value>-->
                </option>
                <!-- possible to override ooption value defined into dataFile -->
            </protection>
        </form>
        <form>
            <name>another</name>
            <protection>
                <type>csrf</type>
                <option>
                    <name>timeValidity</name>
                    <value>60</value>
                </option>
                <option>
                    <name>referer</name>
                    <value>root</value><!-- url name, defined into urls.xml -->
                </option>
            </protection>
        </form>
    </api>
    <api>
        <type>sniffer</type>
        <autorun>true</autorun>
        <trapName>badbottrap</trapName>
        <badCrawlerFile>[PATH_DATA]sniffer[DS]crawlerBad.xml</badCrawlerFile>
        <goodCrawlerFile>[PATH_DATA]sniffer[DS]crawlerGood.xml</goodCrawlerFile>
        <logBadCrawler>true</logBadCrawler>
        <logGoodCrawler>true</logGoodCrawler>
        <logUnknownCrawler>true</logUnknownCrawler>
    </api>
</apis>