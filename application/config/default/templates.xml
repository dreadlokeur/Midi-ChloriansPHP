<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <template>
        <name>default</name>
        <path>[PATH_VIEWS]default[DS]</path><!-- repertoire du template -->
        <assets><!-- Repertoires des ressources ... depuis le repertoire views/template/assets -->
            <rootDirectory>assets</rootDirectory>
            <asset>
                <name>img</name>
                <directory>images</directory>
            </asset>
            <asset>
                <name>sound</name>
                <directory>sounds</directory>
            </asset>
            <asset>
                <name>font</name>
                <directory>fonts</directory>
            </asset>
            <asset>
                <name>css</name>
                <directory>css</directory>
                <cache>
                    <fileName>cache.css</fileName>
                    <fileMeta>cache.meta</fileMeta>
                    <directory>cache</directory>
                    <compress>true</compress><!-- true/false -->
                    <!-- todo time validy ? -->
                </cache>
            </asset>
            <asset>
                <name>js</name>
                <directory>javascripts</directory>
                <cache>
                    <fileName>cache.js</fileName>
                    <fileMeta>cache.meta</fileMeta>
                    <directory>cache</directory>
                    <compress>true</compress><!-- true/false -->
                    <!-- todo time validy  ? -->
                </cache>
                <!-- For creating dynamic javascript with content urls/lang variables-->
                <loadUrls>true</loadUrls>
                <loadLangs>true</loadLangs>
            </asset>
            <asset>
                <name>module</name>
                <directory>modules</directory>
            </asset>
        </assets>
        <charset>UTF-8</charset>
    </template>
</templates>