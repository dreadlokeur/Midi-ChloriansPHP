<?xml version="1.0" encoding="UTF-8"?>
<config>
    <default>
        <path>[PATH_TEMPLATE_DEFAULT]</path>
        <charset>UTF-8</charset>
        <driver>php</driver>
        <assets>
            <img>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]images[DS]</directory>
            </img>
            <sound>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]sounds[DS]</directory>
            </sound>
            <font>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]fonts[DS]</directory>
            </font>
            <module>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]modules[DS]</directory>
            </module>
            <css>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]css[DS]</directory>
                <cache>
                    <compress>true</compress>
                    <name>core</name> <!-- cache name -->
                </cache>
            </css>
            <js>
                <directory>[PATH_TEMPLATE_DEFAULT_ASSETS]javascripts[DS]</directory>
                <loadUrls>true</loadUrls>
                <loadLangs>true</loadLangs>
                <cache>
                    <compress>true</compress>
                    <name>core</name><!-- cache name -->
                </cache>
            </js>
        </assets>
    </default>
</config>