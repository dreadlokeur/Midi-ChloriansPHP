<?xml version="1.0" encoding="UTF-8"?>
<config>
    <index>
        <controller>index</controller>
    </index>
    <captcha>
        <regex>true</regex>
        <rules>
            <rule>captcha/([0-9]+)/([a-z]+)</rule>
        </rules>
        <controller>index</controller>
        <methods>
            <captcha>
                <parameter>[[1]]</parameter>
                <parameter>[[2]]</parameter>
            </captcha>
        </methods>
    </captcha>
    <language>
        <regex>true</regex>
        <rules>
            <rule>language/([A-Za-z0-9_]+)</rule>
        </rules>
        <controller>index</controller>
        <methods>
            <language>
                <parameter>[[1]]</parameter>
            </language>
        </methods>
    </language>
    <error>
        <regex>true</regex>
        <rules>
            <rule>error/([0-9]+)</rule>
        </rules>
        <controller>error</controller>
        <methods>
            <show>
                <parameter>[[1]]</parameter>
            </show>
        </methods>
    </error>
    <debugger>
        <regex>true</regex>
        <rules>
            <rule>error/debugger/([a-z]+)</rule>
        </rules>
        <controller>error</controller>
        <methods>
            <debugger>
                <parameter>[[1]]</parameter>
            </debugger>
        </methods>
    </debugger>
</config>